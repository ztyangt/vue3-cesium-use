{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/packages/**/*.ts",
    "src/packages/**/*.d.ts",
    "src/packages/**/*.tsx",
    "src/packages/**/*.vue",
    "src/shared/**/*.ts",
    "unplugin/auto-imports.d.ts"
  ],
  "exclude": ["src/packages/**/__tests__/*", "src/demo", "tsc-types"],
  "compilerOptions": {
    "composite": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/packages/*"]
    }
  }
}
